// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- USER MODEL ---
model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String
  name         String
  role         String @default("user") // 'user' or 'admin'

  carts        Cart[]
  orders       Order[]
  reviews      Review[]
  wishlist     Wishlist?
  addresses    UserAddress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Model for multiple user addresses
model UserAddress {
  id        Int     @id @default(autoincrement())
  userId    Int
  name      String  // e.g., "Home", "Work"
  firstName String
  lastName  String
  street    String
  city      String
  zip       String
  country   String
  isDefault Boolean @default(false)

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, name])
}

// --- PRODUCT MODEL ---
model Product {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  description     String
  price           Float
  originalPrice   Float?
  availableStock  Int
  category        String
  brand           String
  isFeatured      Boolean  @default(false)
  images          String[]
  rating          Float    @default(0)
  reviewCount     Int      @default(0)
  details         Json?

  cartItems  CartItem[]
  orderItems OrderItem[]
  reviews    Review[]
  wishlists  WishlistProducts[]
}

// --- CART MODELS ---
model Cart {
  id     Int        @id @default(autoincrement())
  userId Int        @unique
  items  CartItem[]

  user User @relation(fields: [userId], references: [id])
}

model CartItem {
  id        Int @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}

// --- ORDER MODELS ---
model Order {
  id              Int     @id @default(autoincrement())
  userId          Int
  status          String  @default("Pending")
  paymentStatus   String  @default("pending")
  orderTotal      Float
  shippingCost    Float
  taxAmount       Float
  paymentRef      String?
  shippingAddress Json
  // ADDED: Track discount information for orders
  discountCode    String?
  discountAmount  Float?  @default(0)

  user  User        @relation(fields: [userId], references: [id])
  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        Int    @id @default(autoincrement())
  orderId   Int
  productId Int
  name      String
  price     Float
  quantity  Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
}

// --- REVIEW MODEL ---
model Review {
  id        Int    @id @default(autoincrement())
  productId Int
  userId    Int
  rating    Int    @default(5)
  title     String
  comment   String
  status    String @default("pending") // 'pending', 'approved', 'rejected'

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

// --- WISHLIST MODEL ---
model Wishlist {
  id       Int                @id @default(autoincrement())
  userId   Int                @unique
  products WishlistProducts[]

  user User @relation(fields: [userId], references: [id])
}

// --- WISHLIST-PRODUCT JOIN TABLE ---
model WishlistProducts {
  wishlistId Int
  productId  Int
  dateAdded  DateTime @default(now())

  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([wishlistId, productId])
}

// --- DISCOUNT MODEL ---
model Discount {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  description String
  type        String   // 'percentage' or 'fixed'
  value       Float    // Percentage (e.g., 20) or fixed amount (e.g., 50.00)
  minPurchase Float?   // Minimum purchase amount required
  maxUses     Int?     // Maximum number of times this discount can be used
  currentUses Int      @default(0)
  startDate   DateTime
  endDate     DateTime
  status      String   @default("active") // 'active', 'scheduled', 'expired', 'disabled'

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code, status])
  @@index([status, endDate])
}